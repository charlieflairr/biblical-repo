{
  "name": "scripture-cards",
  "version": "1.0.0",
  "description": "Learn Bible verses with interactive flashcards - Duolingo style!",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8080",
    "build": "echo 'No build step needed - static files'",
    "cap:init": "npx cap init 'Scripture Cards' com.scripturecards.app --web-dir .",
    "cap:add:ios": "npx cap add ios",
    "cap:copy": "npx cap copy ios",
    "cap:sync": "npx cap sync ios",
    "cap:open": "npx cap open ios",
    "ios": "npm run cap:sync && npm run cap:open"
  },
  "keywords": [
    "bible",
    "scripture",
    "flashcards",
    "learning",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@capacitor/ios": "^6.0.0"
  }
}

